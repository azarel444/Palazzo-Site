<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Blog</title>
    <meta name="description" content="Palazzo Pool & Spa insights and project updates.">

    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/webflow.css">
    <link rel="stylesheet" href="/css/palazzo-site.webflow.css">
  </head>
  <body>
    <main style="max-width:900px;margin:40px auto;">
      <h1>Blog</h1>

      {% set posts = collections.blog | reverse %}
      {% if posts and posts.length %}
        <ul>
          {% for p in posts %}
            <li style="margin: 14px 0;">
              <a href="/blog/{{ p.fileSlug }}/"><strong>{{ p.data.title }}</strong></a><br>
              <small>{{ p.data.date | date: "%B %d, %Y" }}</small>
              {% if p.data.description %}<div>{{ p.data.description }}</div>{% endif %}
            </li>
          {% endfor %}
        </ul>
      {% else %}
        <p>No posts yet.</p>
      {% endif %}
    </main>
  </body>
</html>

